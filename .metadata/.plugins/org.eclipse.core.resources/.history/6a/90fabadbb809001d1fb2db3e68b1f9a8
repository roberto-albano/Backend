package week1giorno5Progetto;

public class Audio implements ElementoMultimediale{

	 int volume; //attributo//
	 double durata;
	 String titolo;
	 
	 public Audio (int volume, double durata, String titolo) {
		 
		     this.volume = volume;
		     this.durata = durata;
		     this.titolo = titolo;
		     }	

	 public void play() {
		 
		 for(int i = 0; i <= durata; i= i + 2 ) {
		 System.out.println("");
	 }
	 
	 
		public void abbassaVolume() {
			this.volume--;
			
		}

		
		public void alzaVolume() {
			this.volume++;
			
		}
}


